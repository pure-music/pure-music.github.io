---
import { SITE } from 'astrowind:config';
import Image from "./common/Image.astro";
import { t, changeLanguage } from "i18next";

const appIcon = '~/assets/images/app-icon.png';
---


<div style="display:flex; align-items: center">
  <Image
    class="mx-auto w-full rounded-md"
    width={40}
    height={40}
    layout="fixed"
    alt=""
    src={appIcon}/>

  <span class="self-center ml-2 ltr:mr-10 rtl:ml-0 rtl:mr-20 text-base md:text-lg font-bold text-gray-900 whitespace-nowrap dark:text-white">{t("site.app_name")}</span>
  
</div>

